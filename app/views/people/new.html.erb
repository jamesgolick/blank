<h1>Sign up as a new user</h1>
<% @person.password = @person.password_confirmation = nil %>

<%= error_messages_for :person %>
<% form_for :person, :url => people_path do |f| -%>
  <h3>The good old fashioned way</h3>
<p><%= f.label :email %><br/>
<%= f.text_field :email %></p>

<p><%= f.label :password %><br/>
<%= f.password_field :password %></p>

<p><%= f.label :password_confirmation, "Confirm Password" %><br/>
<%= f.password_field :password_confirmation %></p>

<p><%= submit_tag 'Sign up' %></p>
<% end -%>

<% form_tag(signup_with_open_id_people_url, :method => :post) do %>
  <h3>Using OpenID</h3>
  <p><%= label_tag :openid_url, "Open ID URL" %><br/>
    <%= text_field_tag :openid_url %></p>
  <p><%= submit_tag "Sign up with OpenID" %></p>
<% end %>
